@model List<ResearchSubmission>

@{
    ViewData["Title"] = "Form Submissions";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>User</th>
                <th>Submission Date</th>
                <th>Temperature</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sub in Model)
            {
                <tr>
                    <td>@sub.UserEmail</td>
                    <td>@sub.DateSubmitted.ToString("MM/dd/yyyy")</td>
                    <td>@sub.Temperature °C</td>
                    <td>
                        <a asp-action="SubmissionDetails" asp-route-id="@sub.Id" class="btn btn-info btn-sm">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>